<%- include('../partials/head') %>
  </head>
  <body class="bg-gray-100 min-h-screen">
    <%- include('../partials/nav') %>
    <main class="flex items-center justify-center min-h-[80vh]">
      <div class="w-full max-w-md bg-white rounded-xl shadow-lg p-8">
        <h1 class="text-2xl font-bold mb-6 text-center text-red-600">Login to your Account</h1>
        <form action="/login" method="POST" class="space-y-4">
          <%- include('../partials/errors') %>
          <div>
            <label class="block text-gray-700 mb-1 font-bold" for="email">
              Email
            </label>
            <input
              
              type="email"
              id="email"
              name="email"
              placeholder="✉️ e.g. john@email.com"
              value="<%= oldInput && oldInput.email ? oldInput.email : '' %>"
              class="w-full pr-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-400"
              required />
          </div>
          <div>
            <label class="block text-gray-700 mb-1 font-bold" for="password">
              Password
            </label>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="🔒 Enter your password"
              class="w-full pr-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-400"
              required />
          </div>
          <button
            type="submit"
            class="w-full bg-red-500 text-white py-2 rounded-md font-semibold hover:bg-red-600 transition duration-200 flex items-center justify-center gap-2"
          >
            Sign In
            <svg class="w-5 h-5 ml-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M5 12h14M13 18l6-6-6-6"></path></svg>
          </button>
          <p class="text-center text-gray-500 mt-2 text-sm">
            Don't have an account?
            <a href="/signup" class="text-red-500 underline hover:text-red-700">Sign up</a>
          </p>
        </form>
      </div>
    </main>
  </body>
</html>